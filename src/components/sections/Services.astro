---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";
import phoneCam from '../../assets/svg/adhoc/camphone.svg'
import phoneVideo from '../../assets/svg/adhoc/videophone.svg'
import drone from '../../assets/svg/adhoc/drone.svg'
import proCam from '../../assets/svg/adhoc/procam.svg'

const cards = [
  {
    index: 1,
    titleTop: "Fotografía y Edición",
    titleBottom: "Móvil 🤳",
    img: phoneCam,
    alt: "Taller foto móvil",
    link: "#accordion__item1"
  },
  {
    index: 2,
    titleTop: "Video y Edición",
    titleBottom: "Móvil 🤳",
    img: phoneVideo,
    alt: "Taller video móvil",
    link: "#accordion__item2"
  },
  {
    index: 3,
    titleTop: "Fotografía y Edición",
    titleBottom: "Equipo Profesional 📷",
    img: proCam,
    alt: "Taller foto pro",
    link: "#accordion__item3"
  },
  {
    index: 1,
    titleTop: "Fotografía y Video",
    titleBottom: "Drones 🛸",
    img: drone,
    alt: "Taller Drones",
    link: "#accordion__item4"
  }
];

const description =
  "Ofrecemos una variedad de talleres enfocados al aprendizaje de la técnica y conceptualization de la fotografía inmobiliaria";
---

<Section id="talleres">
  <div class="mt-20 mb-5">
    <SectionTitle sectionTitle="Talleres" description={description} />
    <div class="grid lg:grid-cols-2 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
